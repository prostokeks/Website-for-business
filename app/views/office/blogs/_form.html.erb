<% if action_name == "new" %>
  <div class="w-full max-w-lg mx-auto mt-12">
    <%= form_with(url: create_blogs_path, model: @blog) do |b| %>
      <div class="mb-6">
        <%= b.label :title, class: "block mb-2 text-sm font-medium text-gray-300" %>
        <%= b.text_field :title, required: true, class: "shadow-sm border text-sm rounded-md block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500 shadow-sm-light", placeholder: "Title" %>
      </div>
      <div class="mb-6">
        <%= b.label :content, class: "block mb-2 text-sm font-medium text-gray-300" %>
        <%= b.text_area :body, required: true, class: "shadow-sm border text-sm rounded-md block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500 shadow-sm-light", placeholder: "Content" %>
      </div>
      <div class="mb-6">
        <%= b.label :avatar, class: "block mb-2 text-sm font-medium text-gray-300" %>
        <%= b.file_field :avatar, class: "text-gray-300 text-sm"%>
      </div>
      <div class="mb-6">
        <%= b.label :images, class: "block mb-2 text-sm font-medium text-gray-300" %>
        <%= b.file_field :images, multiple: true, class: "text-gray-300 text-sm" %>
      </div>
      <%= b.submit "Submit", class: "px-8 py-2 font-semibold border rounded border-white text-white cursor-pointer hover:border-blue-500 hover:text-blue-500" %>
    <% end %>
  </div>
<% else %>
  <div class="w-full max-w-lg mx-auto mt-12">
    <%= form_with model: @blog do |b| %>
      <div class="mb-6">
        <%= b.label :title, class: "block mb-2 text-sm font-medium text-gray-300" %>
        <%= b.text_field :title, required: true, class: "shadow-sm border text-sm rounded-md block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500 shadow-sm-light", placeholder: "Title" %>
      </div>
      <div class="mb-6">
        <%= b.label :content, class: "block mb-2 text-sm font-medium text-gray-300" %>
        <%= b.text_area :body, required: true, class: "shadow-sm border text-sm rounded-md block w-full p-2.5 bg-gray-700 border-gray-600 placeholder-gray-400 text-white focus:ring-blue-500 focus:border-blue-500 shadow-sm-light", placeholder: "Content" %>
      </div>
      <div class="mb-6">
        <%= b.label :avatar, class: "block mb-2 text-sm font-medium text-gray-300" %>
        <%= b.file_field :avatar, class: "text-gray-300 text-sm"%>
      </div>
      <div class="mb-6">
        <%= b.label :images, class: "block mb-2 text-sm font-medium text-gray-300" %>
        <%= b.file_field :images, multiple: true, class: "text-gray-300 text-sm" %>
      </div>
      <%= b.submit "Submit", class: "px-8 py-2 font-semibold border rounded border-white text-white cursor-pointer hover:border-blue-500 hover:text-blue-500" %>
    <% end %>
  </div>
<% end %>
