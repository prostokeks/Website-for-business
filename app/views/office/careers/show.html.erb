<section class="dark:bg-gray-800 dark:text-gray-100 my-20">
  <div class="container flex flex-col justify-center px-4 mx-auto">
    <div class="space-y-4">
      <div class="flex justify-center">
        <div class="w-1/2">
          <h1 class="px-4 py-6 pt-0 ml-4 -mt-4 uppercase"><%= @career.title %></h1>
          <h2 class="px-4 py-6 pt-0 ml-4 -mt-4">REQUIREMENTS</h2>
          <p class="px-4 py-6 pt-0 ml-4 -mt-4"><%= @career.requirement %></p>
          <h2 class="px-4 py-6 pt-0 ml-4 -mt-4">BENEFITS</h2>
          <p class="px-4 py-6 pt-0 ml-4 -mt-4"><%= @career.benefit %></p>
          <h2 class="px-4 py-6 pt-0 ml-4 -mt-4">SALARY: <%= @career.salary %></h2>
          <h2 class="px-4 py-6 pt-0 ml-4 -mt-4">WORK LOAD: <%= @career.work_load %></h2>
          <h2 class="px-4 py-6 pt-0 ml-4 -mt-4">LOCATION: <%= @career.location %></h2>
        </div>
      </div>
    </div>
  </div>
  <div class="field w-full flex justify-center my-6">
    <%= link_to "Back", :back, class: "px-8 py-2 font-semibold border rounded border-white text-white cursor-pointer hover:border-blue-500 hover:text-blue-500" %>
  </div>
</section>


