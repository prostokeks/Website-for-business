                    <% if invoice.year_ids == [@year.id] && invoice.month_ids == [8] %>
                      <% a += invoice.rate * invoice.time %>
                    <% end %>
                  <% end %>
                  <%= a %>
                </td>
                <td class="py-4 text-white">
                  <% a = 0 %>
                  <% product.invoices.each do |invoice| %>
                    <% if invoice.year_ids == [@year.id] && invoice.month_ids == [9] %>
                      <% a += invoice.rate * invoice.time %>
                    <% end %>
                  <% end %>
                  <%= a %>
                </td>
                <td class="py-4 text-white">
                  <% a = 0 %>
                  <% product.invoices.each do |invoice| %>
                    <% if invoice.year_ids == [@year.id] && invoice.month_ids == [10] %>
                      <% a += invoice.rate * invoice.time %>
                    <% end %>
                  <% end %>
                  <%= a %>
                </td>
                <td class="py-4 text-white">
