                  <% a = 0 %>
                  <% product.invoices.each do |invoice| %>
                    <% if invoice.year_ids == [@year.id] && invoice.month_ids == [12] %>
                      <% a += invoice.rate * invoice.time %>
                    <% end %>
                  <% end %>
                  <%= a %>
                </td>
                <td class="py-4 text-white font-medium whitespace-nowrap">
                  <% a = 0 %>
                  <% product.invoices.each do |invoice| %>
                    <% if invoice.year_ids == [@year.id] %>
                      <% a += invoice.rate * invoice.time %>
                    <% end %>
                  <% end %>
                  <%= a %>
                </td>
              </div>
            </tr>
          <% end %>
        <% end %>
        <tr class="border-b bg-gray-800 border-gray-700 hover:bg-gray-600 w-full text-sm text-gray-500">
          <th colspan="14" class="py-4 px-6 font-medium whitespace-nowrap text-white text-left">
            Total
          </th>
          <td class="py-4 text-white font-medium">
            <% a = 0 %>
            <% @invoices.each do |invoice| %>
              <% if invoice.year_ids == [@year.id] %>
                <% a += invoice.rate * invoice.time %>
              <% end %>
            <% end %>
            <%= a %>
          </td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>