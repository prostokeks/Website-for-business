<section class="bg-gray-800 text-gray-100">
  <div class="container flex flex-col mx-auto lg:flex-row">
    <div class="w-full lg:w-2/12 p-6 pl-12">
      <fieldset class="search-field">
        <div class="flex flex-col items-center flex-shrink-0 px-4">
          <legend class="px-8 text-left focus:outline-none block p-2 text-xl font-medium tracking-tighter transition duration-500 ease-in-out transform">Category</legend>
        </div>
        <div class="flex flex-col flex-grow mt-5">
          <%= search_form_for @search do |f| %>
            <div class="field">
              <%= f.collection_check_boxes :fforums_id_in_any, Fforum.all, :id, :name do |b| %>
                <div class="collection-check-box items-center w-full px-4 py-1 text-base transition duration-500 ease-in-out transform rounded-lg focus:shadow-outline hover:bg-gray-900">
                  <%= b.check_box %>
                  <%= b.label %>
                </div>
              <% end %>
            </div>
            <div class="actions px-8 pt-4 mb-4"><%= f.submit "Search", class: "px-8 py-2 font-semibold border rounded border-white text-white cursor-pointer hover:border-blue-500 hover:text-blue-500" %></div>
            <div class="actions pt-6 mb-4 flex justify-center"><%= link_to "Add new", new_forum_path, class: "px-8 py-2 font-semibold border rounded border-white text-white cursor-pointer hover:border-blue-500 hover:text-blue-500" %></div>
        <% end %>
      </fieldset>
    </div>
    <div class="flex flex-col w-full lg:w-10/12">
      <div class="container max-w-6xl p-6 mx-auto space-y-6 sm:space-y-12">
        <div id="forums"  class="grid justify-center grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
          <%= render @forums %>
        </div>
        <div class="flex justify-center">
          <div id="next_link">
            <%= button_to "Load more posts...", pagy_url_for(@pagy, @pagy.next), class:"px-6 py-3 text-sm rounded-md hover:underline bg-gray-900 text-gray-400" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
