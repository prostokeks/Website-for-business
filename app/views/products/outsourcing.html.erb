<section class="bg-gray-800 text-gray-100">
  <div class="container max-w-6xl p-6 mx-auto space-y-6 sm:space-y-12">
    <div id="blogs"  class="grid justify-center grid-cols-1 gap-6 sm:grid-cols-2 lg:grid-cols-3">
      <% @products.each do |product| %>
        <div>
          <%= link_to(product_path(product), class:"max-w-sm mx-auto group hover:no-underline focus:no-underline bg-gray-900") do %>
            <% if product.avatar.attached? %>
              <%= image_tag product.avatar, class: "object-cover w-full rounded h-44 dark:bg-gray-500" %>
            <% else %>
              <img role="presentation" class="object-cover w-full rounded h-44 dark:bg-gray-500" src="https://i.pinimg.com/originals/a5/8f/44/a58f448bc0e25ca345942adc3c5e0646.png">
            <% end %>
            <div class="p-6 space-y-2 bg-gray-900 items-text">
              <h3 class="text-2xl font-semibold"><%= product.title %></h3>
              <span class="text-xs dark:text-gray-400"><%= product.created_at.strftime("%d.%m.%Y") %></span>
              <p><%= product.content %></p>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</section>