<div id="<%= dom_id blog %>">
  <% if @blogs %>
    <%= link_to(blog, class:"max-w-sm mx-auto group hover:no-underline focus:no-underline bg-gray-900") do %>
      <% if blog.avatar.attached? %>
        <%= image_tag blog.avatar, class: "object-cover w-full rounded h-44 dark:bg-gray-500" %>
      <% else %>
        <img role="presentation" class="object-cover w-full rounded h-44 dark:bg-gray-500" src="https://i.pinimg.com/originals/a5/8f/44/a58f448bc0e25ca345942adc3c5e0646.png">
      <% end %>
      <div class="p-6 space-y-2 bg-gray-900 items-text">
        <h3 class="text-2xl font-semibold"><%= blog.title %></h3>
        <span class="text-xs dark:text-gray-400"><%= blog.created_at.strftime("%d.%m.%Y") %></span>
        <p><%= blog.body %></p>
      </div>
    <% end %>
  <% else %>
    <article class="px-4 py-24 mx-auto max-w-7xl">
      <div class="w-full mx-auto mb-12 text-left md:w-3/4 lg:w-1/2">
        <% if blog.avatar.attached? %>
        <%= image_tag blog.avatar, class: "object-cover w-full h-64 bg-center rounded-lg" %>
        <% else %>
        <img role="presentation" class="object-cover w-full rounded h-44 dark:bg-gray-500" src="https://frusia.pro/files/2020-03/0007-preview-horz-v4.svg">
        <% end %>
        <h1 class="mb-3 text-3xl font-bold leading-tight text-white md:text-4xl pt-4">
          <%= blog.title %>
        </h1>
        <div>
          <p class="text-sm text-gray-500"><%= blog.created_at.strftime("%d %b %Y") %></p>
        </div>
      </div>

      <div class="w-full mx-auto prose md:w-3/4 lg:w-1/2 text-white">
        <%= blog.body %>
      </div>
      <div class="w-full mx-auto prose md:w-3/4 lg:w-1/2 pt-8">
        <div class="grid grid-cols-1 gap-4 lg:grid-cols-3 sm:grid-cols-2">
        <% if blog.images.attached? %>
          <% blog.images.each do |img| %>
            <p><%= image_tag img, class: "w-52 h-52 rounded-lg" %></p>
          <% end %>
        <% end %>
        </div>
      </div>
    </article>
    <div class="flex items-center space-x-2 overflow-x-auto overflow-y-hidden justify-center flex-nowrap dark:text-gray-100">
      <div class="actions px-8 pt-4 mb-4"><%= link_to "Back", :back , class: "px-8 py-2 font-semibold border rounded border-white text-white cursor-pointer hover:border-blue-500 hover:text-blue-500" %></div>
    </div>
  <% end %>
</div>